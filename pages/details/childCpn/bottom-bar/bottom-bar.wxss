.bottom-bar {
  height: 98rpx;
  position: relative;
  background-color: #fff;
  text-align: center;
  display: flex;
  border-top: 1px solid #eee;
}

.bar-item {
  flex: 1;
  display: flex;
}

.left-item {
  flex: 1;
}
.left-item .image {
  width: 44rpx;
  height: 44rpx;
  margin-top: 14rpx;
}
.bar-left {
  flex: 3;
}
.bar-left .text {
  font-size: 30rpx;
}

.bar-left .icon {
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin: 12rpx auto 6rpx;
  background: url("~assets/img/detail/detail_bottom.png") 0 0/100%;
}

.bar-left .service {
  background-position:0 -84rpx;
}

.bar-left .shop {
  background-position:0 -158rpx;
}
.bar-left .select {
  background-position:0 4rpx;
}
.bar-right {
  font-size: 26rpx;
  color: #fff;
  line-height: 70rpx;
  margin-top: 24rpx;
  flex: 4;
}

.bar-right .cart {
  background-image: linear-gradient(to right,#FFC601,#FE9601);
  border-radius: 35rpx 0 0 35rpx;
  height: 70rpx;
  flex: 1;
}

.bar-right .buy {
  background-image: linear-gradient(to right,#FE7701,#FE4C01);
  border-radius: 0 35rpx 35rpx 0;
  height: 70rpx;
  flex: 1;
}